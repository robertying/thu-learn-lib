{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es6",
    "outDir": "lib",
    "importHelpers": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*", "@types/**/*"]
}
